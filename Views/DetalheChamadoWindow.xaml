<Window x:Class="teste4343.Views.DetalhesChamadoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Detalhes do Chamado" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        FontFamily="{materialDesign:MaterialDesignFont}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="{Binding Titulo}"
                           Style="{StaticResource MaterialDesignHeadline5TextBlock}"/>
                <TextBlock Text="{Binding Protocolo}"
                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                           Opacity="0.6"/>
            </StackPanel>

            <StackPanel Grid.Column="1"
                        Orientation="Horizontal">
                <Button Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Imprimir"
                        Margin="8,0">
                    <materialDesign:PackIcon Kind="Printer"/>
                </Button>
                <Button Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Exportar PDF"
                        Margin="8,0">
                    <materialDesign:PackIcon Kind="FilePdfBox"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Conteúdo Principal -->
        <ScrollViewer Grid.Row="1"
                      Margin="0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Detalhes do Chamado -->
                <StackPanel>
                    <!-- Status Card -->
                    <materialDesign:Card Margin="0,0,16,16"
                                       Padding="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <materialDesign:PackIcon Kind="Clock"
                                                   Width="24"
                                                   Height="24"
                                                   VerticalAlignment="Center"/>

                            <StackPanel Grid.Column="1"
                                        Margin="16,0">
                                <TextBlock Text="Status Atual"
                                           Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                                <TextBlock Text="{Binding Status}"
                                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                            </StackPanel>

                            <ComboBox Grid.Column="2"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      materialDesign:HintAssist.Hint="Alterar Status"
                                      Width="150"/>
                        </Grid>
                    </materialDesign:Card>

                    <!-- Descrição -->
                    <materialDesign:Card Margin="0,0,16,16"
                                       Padding="16">
                        <StackPanel>
                            <TextBlock Text="Descrição"
                                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding Descricao}"
                                       TextWrapping="Wrap"
                                       Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Anexos -->
                    <materialDesign:Card Margin="0,0,16,16"
                                       Padding="16">
                        <StackPanel>
                            <TextBlock Text="Anexos"
                                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                       Margin="0,0,0,8"/>
                            <ItemsControl ItemsSource="{Binding Anexos}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                                HorizontalContentAlignment="Left">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="File"
                                                                       Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding Nome}"/>
                                            </StackPanel>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </materialDesign:Card>
                </StackPanel>

                <!-- Informações Laterais -->
                <StackPanel Grid.Column="1">
                    <!-- Informações Básicas -->
                    <materialDesign:Card Margin="0,0,0,16"
                                       Padding="16">
                        <StackPanel>
                            <TextBlock Text="Informações"
                                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                       Margin="0,0,0,16"/>

                            <Grid Margin="0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Departamento:"
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           Opacity="0.6"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding Departamento}"
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           Margin="8,0,0,0"/>
                            </Grid>

                            <Grid Margin="0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Prioridade:"
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           Opacity="0.6"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding Prioridade}"
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           Margin="8,0,0,0"/>
                            </Grid>

                            <Grid Margin="0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Data Abertura:"
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           Opacity="0.6"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding DataAbertura, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           Margin="8,0,0,0"/>
                            </Grid>

                            <Grid Margin="0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Tempo Decorrido:"
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           Opacity="0.6"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding TempoDecorrido}"
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           Margin="8,0,0,0"/>
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Histórico Resumido -->
                    <materialDesign:Card Padding="16">
                        <StackPanel>
                            <TextBlock Text="Últimas Atualizações"
                                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                       Margin="0,0,0,16"/>

                            <ItemsControl ItemsSource="{Binding UltimasAtualizacoes}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <materialDesign:PackIcon Kind="Clock"
                                                                   Margin="0,0,8,0"/>
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Descricao}"
                                                           TextWrapping="Wrap"/>
                                                <TextBlock Text="{Binding Data, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"
                                                           Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                           Opacity="0.6"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </materialDesign:Card>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Botões de Ação -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                    Content="Fechar"
                    Command="{Binding FecharCommand}"
                    Margin="0,0,8,0"/>
            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                    Content="Atualizar"
                    Command="{Binding AtualizarCommand}"/>
        </StackPanel>
    </Grid>
</Window>
