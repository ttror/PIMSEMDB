<Window x:Class="teste4343.Views.HistoricoChamadoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Histórico do Chamado" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        FontFamily="{materialDesign:MaterialDesignFont}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="Histórico do Chamado"
                           Style="{StaticResource MaterialDesignHeadline5TextBlock}"/>
                <TextBlock Text="{Binding Protocolo}"
                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                           Opacity="0.6"/>
            </StackPanel>

            <Button Grid.Column="1"
                    Style="{StaticResource MaterialDesignIconButton}"
                    ToolTip="Exportar Histórico"
                    Command="{Binding ExportarCommand}">
                <materialDesign:PackIcon Kind="Export"/>
            </Button>
        </Grid>

        <!-- Timeline do Histórico -->
        <ScrollViewer Grid.Row="1"
                      Margin="0,16">
            <ItemsControl ItemsSource="{Binding HistoricoItems}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="2"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Indicador de Data -->
                            <Border Width="100"
                                    Height="100"
                                    CornerRadius="50"
                                    Background="{DynamicResource MaterialDesignPaper}"
                                    BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                                    BorderThickness="2">
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Data, StringFormat='{}{0:dd}'}"
                                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding Data, StringFormat='{}{0:MMM}'}"
                                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Linha Vertical -->
                            <Rectangle Grid.Column="1"
                                       Width="2"
                                       Fill="{DynamicResource MaterialDesignDivider}"
                                       VerticalAlignment="Stretch"
                                       Margin="0,8"/>

                            <!-- Conteúdo do Histórico -->
                            <materialDesign:Card Grid.Column="2"
                                               Margin="16,0,0,0"
                                               Padding="16">
                                <StackPanel>
                                    <TextBlock Text="{Binding Titulo}"
                                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>

                                    <TextBlock Text="{Binding Descricao}"
                                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                                               TextWrapping="Wrap"
                                               Margin="0,8"/>

                                    <StackPanel Orientation="Horizontal"
                                              Margin="0,8,0,0">
                                        <materialDesign:PackIcon Kind="Account"
                                                               Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Usuario}"
                                                   Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                   Opacity="0.6"/>

                                        <materialDesign:PackIcon Kind="Clock"
                                                               Margin="16,0,8,0"/>
                                        <TextBlock Text="{Binding Data, StringFormat='{}{0:HH:mm}'}"
                                                   Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                   Opacity="0.6"/>
                                    </StackPanel>

                                    <!-- Anexos se houver -->
                                    <ItemsControl ItemsSource="{Binding Anexos}"
                                                 Margin="0,8,0,0"
                                                 Visibility="{Binding Anexos, Converter={StaticResource CollectionVisibilityConverter}}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Style="{StaticResource MaterialDesignFlatButton}"
                                                        HorizontalContentAlignment="Left">
                                                    <StackPanel Orientation="Horizontal">
                                                        <materialDesign:PackIcon Kind="Attachment"
                                                                               Margin="0,0,8,0"/>
                                                        <TextBlock Text="{Binding}"/>
                                                    </StackPanel>
                                                </Button>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </materialDesign:Card>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Botões de Ação -->
        <Button Grid.Row="2"
                Style="{StaticResource MaterialDesignFlatButton}"
                Content="Fechar"
                HorizontalAlignment="Right"
                Command="{Binding FecharCommand}"/>
    </Grid>
</Window>
